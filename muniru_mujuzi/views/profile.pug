doctype html
html(lang="en")
  head
    title Profile Page
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card.shadow-lg
            .card-header.bg-primary.text-white.text-center
              h2.mb-0 #{student.name}'s Profile

            .card-body             
              
              ul.list-group
                li.list-group-item
                  strong Name: 
                  |  #{student.name}
                li.list-group-item
                  strong Email: 
                  |  #{student.email}
                li.list-group-item
                  strong Age: 
                  |  #{student.age}
                li.list-group-item
                  strong Gender: 
                  |  #{student.gender}

            .card-footer.text-center
              a.btn.btn-secondary(href="/edit-profile") Edit Profile
