meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Student Details Entry Form
link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet")

.form-container.border
  .header.
    Student Details Entry Form

  p.mt-3
    | Not all fields marked with a red star are (
    span(style="color: red") *
    | ) are required

  form(action="/addition" method="post"  onsubmit="return validateStudentForm()")
    .row.form-section
      .col-md-6
        label.form-label
          | Sur name 
          span *
        input.form-control(type="text", placeholder="Enter your Sur Name here", id="surname" name="surname")
        span.text-danger#surname-error
      .col-md-6
        label.form-label
          | Given name 
          span *
        input.form-control(type="text", placeholder="Enter your Given Name here", id="givenname" name="givenname")
        span.text-danger#givenname-error

    .form-section
      label.form-label
        | Gender 
        span *
      br
      .form-check.form-check-inline
        input.form-check-input#male(type="radio", name="gender" name="gender")
        label.form-check-label(for="male") Male
      .form-check.form-check-inline
        input.form-check-input#female(type="radio", name="gender" name="gender")
        label.form-check-label(for="female") Female
      span.text-danger#gender-error

    .row.form-section
      .col-md-6
        label.form-label
          | Date of Birth 
          span *
        input.form-control(type="date", value="1970-01-01", id="dob" name="dob")
        span.text-danger#dob-error
      .col-md-6
        label.form-label
          | Country 
          span *
        select.form-select(id="country" name="country")
          option(selected) --------- Select Country ---------
        span.text-danger#country-error

    .row.form-section
      .col-md-6
        label.form-label
          | Place of Residence 
          span *
        input.form-control(type="text", placeholder="Enter your Current place of residence", id="residence" name="residence")
        span.text-danger#residence-error
      .col-md-6
        label.form-label
          | Phone Number 
          span *
        input.form-control(type="tel", placeholder="Eg. 07xxxxxxxx or +2567xxxxxxxx", id="phone" name="phone")
        span.text-danger#phone-error

    .form-section
      label.form-label
        | Email Address 
        span *
      input.form-control(type="email", placeholder="E.g. applicant@gmail.com", id="email" name="email")
      span.text-danger#email-error

    .row.form-section
      .col-md-6
        label.form-label
          | Skills 
          small (Separate skills with commas)
          |  
          span *
        textarea.form-control(rows="3", id="skills" name="skills")
        span.text-danger#skills-error
      .col-md-6
        label.form-label
          | Projects 
          small (Separate Projects with commas)
          |  
          span *
        textarea.form-control(rows="3", id="projects" name="projects")
        span.text-danger#projects-error

    .text-center.mt-4
      button.btn.btn-submit.me-3(type="submit") Submit
      button.btn.btn-cancel(type="reset") Cancel
